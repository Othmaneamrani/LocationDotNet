        <a asp-controller="Client" asp-action="Depart" class="navbar-center">AutoLoc</a>
        <a asp-controller="Client" asp-action="Promo" class="navbar-center">Promotions</a>
        <a asp-controller="Client" asp-action="About" class="navbar-center">About</a>
        <div class="search">
            <form class="form-inline my-2 my-lg-0" method="post" asp-controller="Demande" asp-action="search">
                <div class="input-group">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search..." aria-label="search" name="search" />
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <div class="navbar-right">
        <a asp-controller="Compte" asp-action="Login" class="navbar-right">Login</a>
        <a asp-controller="Compte" asp-action="Sign" class="navbar-right">Sign up</a>
    </div>
</div>


