

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .navbar {
        background-color: #333;
        overflow: hidden;
        width: 100%;
        border-bottom: 2px solid #ddd;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 10px 12px;
            text-decoration: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .navbar a:hover {
                background-color: #ddd;
                color: black;
            }

    .navbar-right {
        float: right;
    }

        .navbar-right a:last-child:hover {
            background-color: orange;
            color: black;
        }

        .navbar-right a:first-child:hover {
            background-color: orange;
            color: black;
        }


        .navbar-right a:last-child {
            background-color: white;
            color: black;
            margin-right: 5px;
        }

    .logo {
        width: 40px;
        height: 40px;
        margin-left: 10px;
        margin-right: 30px;
        cursor: pointer;
    }

    .search {
        margin-left: 20px;
    }


    .navbar-right a.selected-button {
        background-color: #555555;
        color: white;
    }

    .navbar-center a.selected-button {
        background-color: #555555;
        color: white;
    }
</style>

<div class="navbar navbar-expand-lg navbar-dark bg-dark">

    <div class="navbar-collapse text-center">
        <img class="logo" onclick="redirigerVersClientIndex()" src="https://firebasestorage.googleapis.com/v0/b/vehicule-32b2d.appspot.com/o/icons8-car-64.png?alt=media&token=f83e472d-9e59-490a-8636-8bc54f60a539" alt="Logo" />
        <div class="navbar-center">
            <a class="nav-link" href="/Client/Depart">AutoLoc</a>
            <a class="nav-link" href="/Client/Promo">Promotions</a>
            <a class="nav-link" href="/Client/About">About</a>
        </div>
        <div class="search">
            <form class="form-inline my-2 my-lg-0" method="post" asp-controller="Client" asp-action="search">
                <div class="input-group">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search..." aria-label="search" name="search" />
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <div class="navbar-right">
        <a asp-controller="Compte" asp-action="Login" class="navbar-right">Login</a>
        <a asp-controller="Compte" asp-action="Sign" class="navbar-right">Sign up</a>
    </div>
</div>


<script>
    function redirigerVersClientIndex() {
        var controller = "Client";
        var action = "Depart";

        var url = "/" + controller + "/" + action;

        window.location.href = url;
    }


    document.addEventListener("DOMContentLoaded", function () {
        selectedButton();
    });

    function selectedButton() {
        var currentUrl = window.location.pathname.toLowerCase();

        var loginButton = document.querySelector('.navbar-right a[href$="/Compte/Login"]');
        var signButton = document.querySelector('.navbar-right a[href$="/Compte/Sign"]');
        var departButton = document.querySelector('.navbar-center a[href$="/Client/Depart"]');
        var aboutButton = document.querySelector('.navbar-center a[href$="/Client/About"]');
        var promoButton = document.querySelector('.navbar-center a[href$="/Client/Promo"]');


        if (currentUrl.indexOf('/compte/login') !== -1) {
            loginButton.classList.add('selected-button');
        }
        if (currentUrl.indexOf('/compte/sign') !== -1) {
            signButton.classList.add('selected-button');
        }
        if (currentUrl.indexOf('/client/about') !== -1) {
            aboutButton.classList.add('selected-button');
        }
        if (currentUrl.indexOf('/client/depart') !== -1 || currentUrl === ('/')) {
            departButton.classList.add('selected-button');
        }
        if (currentUrl.indexOf('/client/promo') !== -1) {
            promoButton.classList.add('selected-button');
        }
    }


</script>