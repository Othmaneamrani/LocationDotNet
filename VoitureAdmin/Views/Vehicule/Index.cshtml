@model List<BLL.Representation.VehiculeRepresentation>


<h2 class="mt-5 mb-5">Véhicules</h2>

@if (Model == null || Model.Count == 0)
{
    <p>Aucun Véhicule trouvé.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Photo</th>
                <th scope="col">Marque</th>
                <th scope="col">TypeMoteur</th>
                <th scope="col">Prix /jour</th>
                <th scope="col">Disponibilité</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicule in Model)
            {
                <tr>
                    <th scope="row">@vehicule.idRepresentation</th>
                    <td>
                        @if (!string.IsNullOrEmpty(vehicule.photoRepresentation))
                        {
                            <img class="thumbnail-image" src="@vehicule.photoRepresentation" alt="Photo du véhicule" />
                        }
                        else
                        {
                            <span>Aucune photo</span>
                        }
                    </td>
                    <td>@vehicule.marqueRepresentation.First().ToString().ToUpper()@vehicule.marqueRepresentation.Substring(1)</td>
                    <td>@vehicule.typeMoteurRepresentation.First().ToString().ToUpper()@vehicule.typeMoteurRepresentation.Substring(1)</td>
                    <td>@vehicule.prixRepresentation</td>
                    <td>@vehicule.estDispoRepresentation.First().ToString().ToUpper()@vehicule.estDispoRepresentation.Substring(1)</td>
                    <td>
                        <a class="btn btn-primary" href="Vehicule/updateVehicule/@vehicule.idRepresentation">Modifier</a>
                        <a class="btn ml-0 btn-danger" href="Vehicule/deleteVehiculeView/@vehicule.idRepresentation">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Vehicule" asp-action="addVehicule" class="btn btn-primary">Ajouter un véhicule</a>
