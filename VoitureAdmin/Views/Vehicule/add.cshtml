@model BLL.Command.VehiculeCommand

<h2 class="mt-5">Ajouter un nouveau véhicule</h2>

<form method="post" action="add" class="mt-5">

    <div class="mb-3">
        <label class="form-label">Photo du véhicule</label>
        <input type="file" class="form-control" name="photoCommand" accept="image/*">
    </div>
    <div class="mb-3">
        <label class="form-label">Type de véhicule</label>
        <input type="text" class="form-control" asp-for="typeCommand">
    </div>
    <div class="mb-3">
        <label class="form-label">Marque</label>
        <input type="text" class="form-control" asp-for="marqueCommand">
    </div>
    <div class="mb-3">
        <label class="form-label">Kilometrage</label>
        <input type="number" class="form-control" asp-for="kilometrageCommand">
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre de sieges</label>
        <input type="text" class="form-control" asp-for="nombreSiegesCommand">
    </div>
    <div class="mb-3">
        <label class="form-label">Type de moteur</label>
        <input type="text" class="form-control" asp-for="typeMoteurCommand">
    </div>    
    <div class="mb-3">
        <label class="form-label">Prix</label>
        <input type="text" class="form-control" asp-for="prixCommand">
    </div>
    <div class="mb-3">
        <label class="form-label">Annonce (vente ou location)</label>
        <input type="text" class="form-control" asp-for="annonceCommand">
    </div>

    <button type="submit" class="btn btn-primary">Ajouter</button>
    <a asp-controller="Vehicule" asp-action="Index" class="btn btn-primary m-md-1">Retour</a>

</form>