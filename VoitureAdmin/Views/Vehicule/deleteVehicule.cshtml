@model DAL.Models.Vehicule



<div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="card " style="width: 18rem; padding: 35px;">
        <div class="card-body text-center ">
            <h5 class="card-title mb-4">Etes-vous sur de vouloir supprimer @Model.marque ?</h5>
            <form asp-controller="Vehicule" asp-action="deleteVehicule" asp-route-id="@Model.id" method="post">
                <button type="submit" class="btn btn-danger m-lg-1">Oui</button>
                <a  asp-controller="Vehicule" asp-action="Index" class="btn btn-primary m-md-1">Non</a>
            </form>
        </div>
    </div>
</div>