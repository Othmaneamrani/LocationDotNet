@using AutoMapper;
@using BLL.Representation;
@using BLL.Services;
@using DAL;
@using Newtonsoft.Json;
@using System.Security.Claims;

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@1,9..144,200&family=Gluten:wght@200&display=swap" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<partial name="navbarLogin"  />


@{
    List<DemandeRepresentation> demandes = ViewBag.demandes;
    List<long> list = new List<long>();
}

<a asp-controller="Client" asp-action="Profil" class="btn btn-primary m-lg-3 ">Retour</a>


<div style="text-align: center;">
    <h2 class="titre">Vos Commandes</h2>
</div>





@if (demandes == null || demandes.Count == 0)
{
    <p>Aucune commande trouvée.</p>
}


@for (var i = 0; i < demandes.Count; i++)
{

    <div class="card text-center mx-auto">
        <div class="card-header">
            Commande N°: @demandes[i].idRepresentation
        </div>
        <div class="card-body">
            @{
                list.Add(@demandes[i].vehiculeIdRepresentation);
            }
            <h5 id="vehicule-@i" class="card-title mb-3" style="font-size:20px;font-weight:bold;"></h5>
            <p class="card-text"> <span style="font-weight:bold;font-size:20px;"> Du </span> @demandes[i].dateDebutRepresentation <span style="font-weight:bold;font-size:20px;">jusqu'à </span> @demandes[i].dateFinRepresentation</p>
            <a id="btn-@i" class="btn btn-primary"></a>
            <a asp-controller="Client" asp-action="deleteDemandeView" asp-route-id="@demandes[i].idRepresentation" class="btn btn-danger">Supprimer</a>
        </div>
        <div class="card-footer text-body-secondary">
            @demandes[i].prixTotalRepresentation DHs
        </div>
    </div>
}


<style>


    .card{
        max-width:60%;
        margin-top: 30px;
        margin-bottom: 60px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-header{
        font-weight: bold;
        font-size:22px;
    }

    .card-footer{
        font-weight: bold;
        font-size: 22px;
    }

    .card-text{
        font-size: 18px;
    }

    .titre{
        margin-bottom:40px;
        font-family: 'Gluten', cursive;
        font-weight: bold;
    }

    .btn-interdit {
        background-color: #dcdcdc; 
        color: #999999;
        cursor: not-allowed;
        border: 1px solid #cccccc;
        opacity: 0.6; 
    }

    .btn-interdit:hover {
            background-color: #dcdcdc;
            border: 1px solid #cccccc;
        }


</style>


<script>
    @for (var i = list.Count - 1; i >= 0; i--)
    {
        var vehiculeId = list[i];
        <text>  
        var marque = document.getElementById("vehicule-" + @i);
        $.ajax({
            url: "/Client/getMarque",
            type: "GET",
            data: { vehiculeId: @vehiculeId },
            success: function (result) {
                marque.innerHTML = result.charAt(0).toUpperCase() + result.slice(1);
            },
            error: function (error) {
                console.error("Erreur : ", error);
            },
            async: false
        });
        </text>
    }


        @for (var i = list.Count - 1; i >= 0; i--)
        {
        var vehiculeId = list[i];
        <text>
            var btn = document.getElementById("btn-" + @i);
            $.ajax({
                url: "/Client/EstDispo",
                type: "GET",
                data: { vehiculeId: @vehiculeId },
                success: function (result) {
                    if (result) {
                        btn.innerHTML = "Payer";
                    btn.onclick = function () {
                        alert("Bsehtek !");
                    };
                    }else{
                        btn.classList.add('btn-interdit');
                        btn.innerHTML = "Indisponible";
                    btn.onclick = function () {
                        alert("Véhicule indisponible.");
                    };
                    }
                },
                error: function (error) {
                    console.error("Erreur : ", error);
                },
                async: false
            });
        </text>

        }


</script>
