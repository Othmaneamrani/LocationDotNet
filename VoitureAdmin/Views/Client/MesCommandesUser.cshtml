@using AutoMapper;
@using BLL.Representation;
@using BLL.Services;
@using DAL;
@using Newtonsoft.Json;
@model BLL.Representation.LoginRepresentation

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@1,9..144,200&family=Gluten:wght@200&display=swap" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<partial name="navbarLogin" model="Model" />


@{
    LoginRepresentation loginJson1 = new LoginRepresentation();
    loginJson1.compteRepresentation = Model.compteRepresentation;
    loginJson1.vehiculesRepresentation = Model.vehiculesRepresentation;
    List<long> list = new List<long>();

}

<a asp-controller="Client" asp-action="Profil" asp-route-loginJson="@JsonConvert.SerializeObject(loginJson1)" class="btn btn-primary m-lg-3 ">Retour</a>


<div style="text-align: center;">
    <h2 class="titre">Vos Commandes</h2>
</div>





@if (Model.demandes == null || Model.demandes.Count == 0)
{
    <p>Aucune commande trouvée.</p>
}


@foreach(var demande in Model.demandes)
{

    <div class="card text-center mx-auto">
        <div class="card-header">
           Commande N°: @demande.idRepresentation
        </div>
        <div class="card-body">
            @{
                list.Add(demande.vehiculeIdRepresentation);
            }
            <h5 id="vehicule-@demande.vehiculeIdRepresentation" class="card-title mb-3"  style="font-size:20px;font-weight:bold;" ></h5>
            <p class="card-text"> <span style="font-weight:bold;font-size:20px;"> Du </span> @demande.dateDebutRepresentation <span style="font-weight:bold;font-size:20px;">jusqu'à </span> @demande.dateFinRepresentation</p>
            <a href="#" class="btn btn-primary">Payer</a>
            <a asp-controller="Client" asp-action="deleteDemandeView" asp-route-id="@demande.idRepresentation" asp-route-loginJson="@JsonConvert.SerializeObject(Model)" asp class="btn btn-danger">Supprimer</a>
        </div>
        <div class="card-footer text-body-secondary">
            @demande.prixTotalRepresentation DHs
        </div>
    </div>
}


<style>


    .card{
        max-width:60%;
        margin-top: 30px;
        margin-bottom: 60px;
    }



    .card-header{
        font-weight: bold;
        font-size:22px;
    }

    .card-footer{
        font-weight: bold;
        font-size: 22px;
    }

    .card-text{
        font-size: 18px;
    }

    .titre{
        margin-bottom:40px;
        font-family: 'Gluten', cursive;
        font-weight: bold;
    }



</style>


<script>
    @for (var i = list.Count - 1; i >= 0; i--)
    {
        var vehiculeId = list[i];
        <text>
        var marque = document.getElementById("vehicule-" + @vehiculeId);
        $.ajax({
            url: "/Client/getMarque",
            type: "GET",
            data: { vehiculeId: @vehiculeId },
            success: function (result) {
                marque.innerHTML = result.charAt(0).toUpperCase() + result.slice(1);;
            },
            error: function (error) {
                console.error("Erreur : ", error);
            },
            async: false
        });
        </text>
    }
</script>
