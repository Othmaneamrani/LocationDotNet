@model bool


<partial name="navbarLogin" model="Model" />

@if (Model)
{
    <div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
        <div class="card" style="width: 18rem; padding: 35px;">
            <div class="card-body text-center">
                <h5 class="card-title mb-4">Password changé !</h5>
                <a asp-controller="Client" asp-action="Parametre"  class="btn btn-primary m-lg-1">Ok</a>
            </div>
        </div>
    </div>
}else
{
    <div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
        <div class="card" style="width: 18rem; padding: 35px;">
            <div class="card-body text-center">
                <h5 class="card-title mb-4">Password invalide.</h5>
                <a asp-controller="Client" asp-action="Parametre"  class="btn btn-primary m-lg-1">Ok</a>
            </div>
        </div>
    </div>
}