@using Newtonsoft.Json;
@model BLL.Representation.LoginRepresentation

<partial name="navbarLogin" model="Model" />






@if (Model != null)
{
    <div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
        <div class="card " style="width: 18rem; padding: 20px;">
            <div class="card-body text-center ">
                <h5 class="card-title mb-4">Commande éffectuée !</h5>
                <a class="btn btn-primary m-md-1" asp-controller="Client" asp-action="IndexJson" asp-route-loginJson="@JsonConvert.SerializeObject(Model)">Ok</a>
            </div>
        </div>
    </div>
}
else
{
    <p>Demande déjà éffectuée.</p>
}